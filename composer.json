{
    "name": "erivello/silexplate",
    "description": "A simple boilerplate for Silex PHP micro-framework based on the Symfony2 Components.",
    "keywords": ["silex", "symfony"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Edoardo Rivello",
            "email": "edoardo.rivello@gmail.com"
        }
    ],
    "require": {
        "doctrine/dbal": "2.2.*",
        "monolog/monolog": ">=1.0.0,<1.2",
        "silex/silex": "1.0.*",
        "symfony/config": "2.1.*",
        "symfony/form": "2.1.*",
        "symfony/translation": "2.1.*",
        "symfony/twig-bridge": "2.1.*",
        "twig/twig": ">=1.8,<2.0"
    },
    "scripts": {
        "post-install-cmd": "Silexplate\\Composer\\EventHandler::postInstall"
    },
    "autoload": {
        "psr-0": {
            "Silexplate": "src/"
        }
    }
}